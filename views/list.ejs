<%- include("todo") -%> <!-- Include the 'todo' partial, which likely contains the head, styles, or navigation -->

<!-- Header section displaying the title -->
<div class="box1" id="heading">
    <h1>Today</h1>
</div>

<!-- Container for the to-do list items and input -->
<div class="box">

    <!-- Loop through each item in the to-do list -->
    <% newListItems.forEach(function(item){ %>

        <!-- Each item is wrapped in a form to handle deletion on checkbox change -->
        <form action="/delete" method="post">
            <div class="item">

                <!-- Custom styled round checkbox -->
                <div class="round">
                    <!-- When checkbox is changed, form is submitted to delete the item -->
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()" id="checkbox">
                    <label for="checkbox"></label> <!-- Label for styling the custom checkbox -->
                </div>

                <!-- Display the to-do item name -->
                <p><%= item.name %></p>
                <br>
            </div>
        </form>

    <% }); %>

    <!-- Form to add a new item to the to-do list -->
    <form class="item" action="/" method="post">
        <!-- Input for entering the new item name -->
        <input type="text" name="n" placeholder="new">
        <hr>
        <!-- Submit button to add the item -->
        <button id="b" type="submit"><span id="s2">+</span></button>
    </form>

</div>
