<html>
<head>
    <title>Social Network</title>

    <!-- Linking external stylesheets for layout, theme, color scheme, and responsiveness -->
    <link rel="stylesheet" href="/public/css/main.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/color.css">
    <link rel="stylesheet" href="/public/css/responsive.css">

    <!-- Inline style to customize the star icon color (used for premium feature indicator) -->
    <style>
        .fa.fa-star {
            color: yellowgreen !important;
        }
    </style>
</head>
<body>

    <!-- Main theme container -->
    <div class="theme-layout">
        <div class="container-fluid pdng0"> <!-- Full-width container with no padding -->
            <div class="row merged"> <!-- Merged row layout -->

                <!-- Centered login form using Bootstrap offset and column layout -->
                <div class="offset-md-3 col-md-6">

                    <!-- Background styling for login/register card -->
                    <div class="login-reg-bg">

                        <!-- Login/Register content area -->
                        <div class="log-reg-area sign">

                            <!-- Page heading with a premium feature icon -->
                            <h2 class="log-title">
                                Forgot Password 
                                <i class="fa fa-star" style="font-size: 16px;">Premium feature</i>
                            </h2>

                            <!-- Password recovery form -->
                            <form>

                                <!-- Email input field -->
                                <div class="form-group">
                                    <input type="email" required name="email" />
                                    <label class="control-label">Email</label>
                                    <i class="mtrl-select"></i> <!-- Material-style input indicator -->
                                </div>

                                <!-- Submit button for sending recovery link -->
                                <div class="submit-btns">
                                    <button class="mtr-btn login" name="submit" type="submit">
                                        <span>Send Recovery Link</span>
                                    </button>
                                </div>
                            </form>

                            <!-- Link to go back to login page -->
                            <p>
                                <a href="/login">Goto login</a>
                            </p>

                        </div> <!-- /.log-reg-area -->

                    </div> <!-- /.login-reg-bg -->

                </div> <!-- /.offset-md-3.col-md-6 -->

            </div> <!-- /.row.merged -->
        </div> <!-- /.container-fluid -->
    </div> <!-- /.theme-layout -->

</body>
</html>
