<%- include ("includes/header") %> <!-- Include header partial -->

<!-- Style block to define blur effect for premium-locked sections and styling for the premium message -->
<style>
	/* Blur all content in the premium section */
	.premium-section {
		filter: blur(5px);
	}

	/* Styling the premium popup box */
	.premium {
		position: fixed;
		left: 30%;
		top: 45%;
		z-index: 100;
		background-color: white;
		padding: 20px;
		border-radius: 8px;
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
	}

	.premium h1 {
		font-size: 70px;
		margin-bottom: 10px;
	}

	.premium p {
		font-size: 26px;
	}
</style>

<!-- Premium feature popup shown when user tries to access locked features -->
<div class="premium">
	<h1>Premium feature</h1>
	<!-- Optional message -->
	<!-- <p>Please upgrade to access this feature.</p> -->
</div>

<!-- Main section blurred for free users to indicate premium content -->
<section class="premium-section">
	<div class="gap gray-bg">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="row" id="page-contents">

						<!-- Left sidebar (menu/navigation) -->
						<div class="col-md-3">
							<%- include ("includes/left-sidebar") %>
						</div>

						<!-- Center content showing groups -->
						<div class="col-md-6">
							<div class="central-meta">
								<div class="editing-interest">
									<h5 class="f-title"><i class="ti-bell"></i>All Groups</h5>
									<div class="notification-box">
										<ul id="all-groups"></ul> <!-- Dynamic group list -->
										<img src="public/blurs/groups.png"> <!-- Placeholder blurred image -->
									</div>
								</div>
							</div>
						</div>

						<!-- Right sidebar is intentionally omitted here -->

					</div> <!-- #page-contents -->
				</div>
			</div>
		</div>
	</div>
</section>

<%- include ("includes/footer") %> <!-- Include footer partial -->
