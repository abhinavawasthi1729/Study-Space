<%- include("includes/header") %> <!-- Include the common header (navigation, meta tags, etc.) -->

<!-- Styles specific to premium feature display -->
<style>
	/* Apply blur effect to the main content when showing premium modal */
	.premium-section {
		filter: blur(5px);
	}

	/* Style for the premium modal popup */
	.premium {
		position: fixed;
		left: 30%;
		top: 45%;
		z-index: 100;
		background-color: white;
		padding: 20px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
		border-radius: 10px;
		text-align: center;
	}

	/* Large header text in premium popup */
	.premium h1 {
		font-size: 70px;
		margin-bottom: 10px;
	}

	/* Description text in premium popup */
	.premium p {
		font-size: 26px;
	}
</style>

<!-- Premium Feature Modal -->
<div class="premium">
	<h1>Premium Feature</h1>
	<p>Please upgrade to access this feature</p>
</div>

<!-- Main blurred content section due to modal -->
<section class="premium-section">
	<div class="gap gray-bg"> <!-- Section wrapper with gray background -->
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">

					<!-- 3-column layout: left sidebar | main content | right sidebar -->
					<div class="row" id="page-contents">

						<!-- Left Sidebar -->
						<div class="col-md-3">
							<%- include("includes/left-sidebar") %>
						</div>

						<!-- Main Content (Friends section) -->
						<div class="col-md-6">
							<div class="central-meta">
								<div class="frnds">
									<!-- Tab container -->
									<div class="tab-content">
										<div class="tab-pane active fade show" id="frends">
											<!-- Dynamic friends list -->
											<ul class="nearby-contct" id="friends"></ul>

											<!-- Blurred fallback image for premium-only content -->
											<img src="/public/blurs/friends.png" alt="Premium Content Preview">
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Right Sidebar -->
						<div class="col-md-3">
							<%- include("includes/right-sidebar") %>
						</div>

					</div> <!-- /#page-contents -->

				</div>
			</div>
		</div>
	</div>
</section>

<%- include("includes/footer") %> <!-- Include the common footer (scripts, closing tags, etc.) -->
